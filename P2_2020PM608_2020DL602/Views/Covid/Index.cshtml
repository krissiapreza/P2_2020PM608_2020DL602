@model IEnumerable<P2_2020PM608_2020DL602.Models.CasosReportados>

<br />
<h1 class="text-center">@ViewData["titulo"]</h1>
<h4 class="text-center lead">El siguiente formulario es para llevar el registro de casos reportados de Covid por departamento y genero.</h4>
<br>
<br>
<h4>Reportar Casos</h4>
<form method="post" asp-action="agregarCasos">
    <div class="row p-4">
        <div class="col">
            <label>Departamentos</label>
            @Html.DropDownList("DeptSel", (IEnumerable<SelectListItem>)ViewBag.CmbDeptVl, new{@class="form-control"})
        </div>
        <div class="col">
            <label>Genero</label>
            @Html.DropDownList("GenSel", (IEnumerable<SelectListItem>)ViewBag.CmbGentVl, new{@class="form-control"})
        </div>
    </div>
    <div class="row p-4">
        <div class="col">
            <label>Casos Confirmados</label>
            @Html.TextBox("cconfir","", new{@class="form-control"})
        </div>
        <div class="col">
            <label>Numero de Recuperados</label>
            @Html.TextBox("nrecu","", new{@class="form-control"})
        </div>
        <div class="col">
            <label>Numero de Fallecidos</label>
            @Html.TextBox("nfalle","", new{@class="form-control"})
        </div>
    </div> 
    <div class="row p-4">
        <div class="col">
            <input class="col-12 btn btn-success" type="submit" name="response" value="Guardar Registro" formmethod="post" />
        </div>
    </div>

    <br />
    <br />

    <div class="row p-4">
        <div class="row">
            <h4>Casos Reportados</h4>
        </div>
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Departamento</th>
                        <th>Genero</th>
                        <th>Confirmados</th>
                        <th>Recuperados</th>
                        <th>Fallecidos</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var datos in Model)
			        {
			        <tr>
				        <td>@Html.DisplayFor(modelItem => datos.departamento)</td>
				        <td>@Html.DisplayFor(modelItem => datos.genero)</td>
				        <td>@Html.DisplayFor(modelItem => datos.confirmados)</td>
				        <td>@Html.DisplayFor(modelItem => datos.recuperados)</td>
				        <td>@Html.DisplayFor(ModelItem => datos.fallecidos)</td>
			        </tr>
			        }
                </tbody>
            </table>
        </div>
    </div>
</form> 